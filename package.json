{
  "name": "js-forms",
  "version": "1.0.4",
  "description": "Some helpers for working with forms in Javascript",
  "main": "lib/index.js",
  "scripts": {
    "clean:docs": "rimraf docs && mkdir docs",
    "clean:lib": "rimraf lib && mkdir lib",
    "clean:dist": "rimraf dist && mkdir dist",
    "clean": "npm run clean:lib && npm run clean:dist",
    "lint": "eslint ./src",
    "lib": "babel src -d lib",
    "dist": "cross-env BABEL_ENV=dist browserify -t babelify -d -s jsForms ./src/index.js > ./dist/js-forms.js",
    "prebuild:lib": "npm run clean:lib && npm run lint",
    "build:lib": "npm run lib",
    "prebuild:dist": "npm run clean:dist && npm run lint",
    "build:dist": "npm run dist",
    "prebuild": "npm run clean && npm run lint",
    "build": "npm run lib && npm run dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "babel": {
    "env": {
      "dist": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "browsers": [
                  "last 2 versions"
                ]
              }
            }
          ]
        ]
      }
    },
    "presets": [
      [
        "@babel/preset-env"
      ]
    ],
    "comments": false,
    "sourceMaps": "inline"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beforan/js-forms.git"
  },
  "author": "beforan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/beforan/js-forms/issues"
  },
  "homepage": "https://github.com/beforan/js-forms#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "babel-eslint": "^10.0.1",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "cross-env": "^5.2.0",
    "eslint": "^5.9.0",
    "eslint-plugin-mocha": "^5.2.0",
    "husky": "^1.2.0",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.8.0",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "formdata-polyfill": "^3.0.13"
  }
}
